<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnAbout"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:drawableStart="@drawable/baseline_more_vert_24"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/placeholder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="end"
        android:textColor="@color/white"
        android:layout_marginEnd="10sp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="end"
        android:layout_marginEnd="10sp"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:singleLine="true"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center"
            android:background="#FC1C55"
            android:layout_margin="0.50dp"
            android:textStyle="bold"
            android:text="C"
            tools:ignore="NestedWeights"/>
        <TextView
            android:id="@+id/actionDivide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center"
            android:background="#FC1C55"
            android:layout_margin="0.50dp"
            android:textStyle="bold"
            android:text="/" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/num7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center"
            android:background="#636363"
            android:layout_margin="0.50dp"
            android:textStyle="bold"
            android:text="7"
            tools:ignore="NestedWeights" />
        <TextView
            android:id="@+id/num8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center"
            android:background="#636363"
            android:layout_margin="0.50dp"
            android:textStyle="bold"
            android:text="8"/>
        <TextView
            android:id="@+id/num9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center"
            android:background="#636363"
            android:layout_margin="0.50dp"
            android:textStyle="bold"
            android:text="9"/>
        <TextView
            android:id="@+id/actionMultiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center"
            android:background="#FC1C55"
            android:layout_margin="0.50dp"
            android:textStyle="bold"
            android:text="*"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/num4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center"
            android:background="#636363"
            android:layout_margin="0.50dp"
            android:textStyle="bold"
            android:text="4"
            tools:ignore="NestedWeights" />
        <TextView
            android:id="@+id/num5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center"
            android:background="#636363"
            android:layout_margin="0.50dp"
            android:textStyle="bold"
            android:text="5" />
        <TextView
            android:id="@+id/num6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center"
            android:background="#636363"
            android:layout_margin="0.50dp"
            android:textStyle="bold"
            android:text="6" />
        <TextView
            android:id="@+id/actionMinus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center"
            android:background="#FC1C55"
            android:layout_margin="0.50dp"
            android:textStyle="bold"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/num1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center"
            android:background="#636363"
            android:layout_margin="0.50dp"
            android:textStyle="bold"
            android:text="1"
            tools:ignore="NestedWeights" />
        <TextView
            android:id="@+id/num2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center"
            android:background="#636363"
            android:layout_margin="0.50dp"
            android:textStyle="bold"
            android:text="2" />
        <TextView
            android:id="@+id/num3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center"
            android:background="#636363"
            android:layout_margin="0.50dp"
            android:textStyle="bold"
            android:text="3" />
        <TextView
            android:id="@+id/actionAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center"
            android:background="#FC1C55"
            android:layout_margin="0.50dp"
            android:textStyle="bold"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/numDot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center"
            android:background="#636363"
            android:layout_margin="0.50dp"
            android:textStyle="bold"
            android:text="." />
        <TextView
            android:id="@+id/num0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center"
            android:background="#636363"
            android:layout_margin="0.50dp"
            android:textStyle="bold"
            android:text="0" />
        <TextView
            android:id="@+id/actionBack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center"
            android:background="#636363"
            android:layout_margin="0.50dp"
            android:textStyle="bold"
            android:text="CE" />
        <TextView
            android:id="@+id/actionEquals"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center"
            android:background="#FC1C55"
            android:layout_margin="0.50dp"
            android:textStyle="bold"
            android:text="=" />
    </LinearLayout>
</LinearLayout>