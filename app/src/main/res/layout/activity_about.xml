<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="80dp"
    android:orientation="vertical"
    tools:context=".AboutActivity">

    <ImageView
        android:id="@+id/profile_image"
        android:src="@drawable/tuki"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="daniel miranda"
        android:fontFamily="@font/regular_font2"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/profession_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="student"
        android:textSize="25sp"
        android:fontFamily="@font/regular_font2"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"/>


    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="i am a person who was born and lives in latin america, a fan of e-sports, fan #1 of hailee steinfeld, and i enjoy practicing various sports, reading, learning different languages, and of course playing video games. i developed this calculator for a task, and i hope u like it."
        android:textSize="17sp"
        android:fontFamily="@font/regular_font"
        android:justificationMode="inter_word"
        android:layout_marginTop="16dp"/>
</LinearLayout>